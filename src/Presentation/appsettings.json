{
  "UseLogging": false,
  "UseTracing": false,
  "AspNetCoreInstrumentation": {
    "RecordException": "true"
  },
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.Hosting.Lifetime": "Information",
        "Microsoft.AspNetCore": "Warning",
        "System": "Error",
        "GraphQL.AspNet": "Information"
      }
    },
    "Enrich": [
      "FromLogContext",
      "WithEnvironmentName",
      "WithMachineName"
    ]
  },
  "GraphQL": {
    "ComplexityConfiguration": {
      "MaxDepth": 15,
      "MaxComplexity": 250
    },
    "EnableMetrics": true
  },
  "AllowedHosts": "*"
}
